<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <EditText

        android:id="@+id/idText"
        android:layout_width="191dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:inputType="textPersonName"

        />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/idText"
        android:layout_below="@+id/idText"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/idcheckButton"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/idText"
        android:text="중복확인" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="회원가입 완료" />

    <EditText
        android:id="@+id/confirmpasswordText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/idText"
        android:layout_below="@+id/passwordText"
        android:ems="10"
        android:hint="비밀번호을 다시 입력하세요"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/backToLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="336dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/backToLoginButton"
        android:text="회원 가입" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backToLoginButton"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="336dp"
        android:layout_height="45dp"
        android:layout_below="@+id/backToLoginButton"
        android:layout_toEndOf="@+id/backToLoginButton"
        android:text="가입확인을 하신 후 이용하시기 바랍니다" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/idText"
        android:text="아이디" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="비밀번호" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordText"
        android:text="비밀번호 확인" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nameText"
        android:text="이름" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="나이" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:text="성별" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:text="이메일" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/idText"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/ageText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number"
        android:text="-" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signupButton"
        android:layout_centerHorizontal="true"
        android:text="모든 약관에 동의합니다" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="182dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginStart="109dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/checkBox2"
            android:layout_alignTop="@+id/textView10"
            android:layout_weight="1"
            android:checked="true"
            android:text="남자" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/idText"
            android:layout_alignTop="@+id/textView10"
            android:layout_weight="1"
            android:text="여자" />
        />
    </RadioGroup>


</RelativeLayout>